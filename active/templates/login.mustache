<form method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" id="login" name="login" value="{{staff.login}}" required>
        {{#errors.login}}<div class="d-block invalid-feedback">{{errors.login}}</div>{{/errors.login}}
    </div>
    <div class="form-group">
        <label for="password">Heslo</label>
        <input type="password" class="form-control" id="password" name="password" required>
        {{#errors.password}}<div class="d-block invalid-feedback">{{errors.password}}</div>{{/errors.password}}
    </div>
    <div class="form-group">
    {{#errors.isvalid}}<div class="d-block invalid-feedback">{{errors.isvalid}}</div>{{/errors.isvalid}}
    </div>
    <button type="submit" class="btn btn-primary mt-3">Přihlásit se</button>
    <hr/>
</form>