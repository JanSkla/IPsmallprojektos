<h2>Založit místnost</h2>
<form method="post">
    <div class="form-group">
        <label for="name">Jméno</label>
        <input type="text" class="form-control" id="name" name="name" value="{{staff.name}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="surname">Příjmení</label>
        <input type="text" class="form-control" id="surname" name="surname" value="{{staff.surname}}">
        {{#errors.surname}}<div class="d-block invalid-feedback">{{errors.surname}}</div>{{/errors.surname}}
    </div>
    <div class="form-group">
        <label for="job">Pozice</label>
        <input type="text" class="form-control" id="job" name="job" value="{{staff.job}}" required>
        {{#errors.job}}<div class="d-block invalid-feedback">{{errors.job}}</div>{{/errors.job}}
    </div>
    <div class="form-group">
        <label for="wage">Plat</label>
        <input type="text" class="form-control" id="wage" name="wage" value="{{staff.wage}}" required>
        {{#errors.wage}}<div class="d-block invalid-feedback">{{errors.wage}}</div>{{/errors.wage}}
    </div>
    <div class="form-group">
        <label for="room">ID Místnosti</label>
        <select name="room" id="room">
            {{#room}}
            <optgroup label="Current:">
                <option value="{{room_id}}">{{name}} ({{no}})</option>
            </optgroup>
            {{/room}}
            {{#rooms}}
                <option value="{{room_id}}">{{name}} ({{no}})</option>
            {{/rooms}}
        </select>
        {{#errors.room}}<div class="d-block invalid-feedback">{{errors.room}}</div>{{/errors.room}}
    </div>
    {{#create}}
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" class="form-control" id="login" name="login" value="{{staff.login}}" required>
        {{#errors.login}}<div class="d-block invalid-feedback">{{errors.login}}</div>{{/errors.login}}
    </div>
    <div class="form-group">
        <label for="password">Heslo</label>
        <input type="password" class="form-control" id="password" name="password" value="{{staff.password}}" required>
        {{#errors.password}}<div class="d-block invalid-feedback">{{errors.password}}</div>{{/errors.password}}
    </div>
    {{/create}}
    <div class="form-group">
        <label for="admin">Admin oprávnění</label>
        <input type="checkbox" id="admin" name="admin" {{#staff.admin}}checked{{/staff.admin}}>
        {{#errors.admin}}<div class="d-block invalid-feedback">{{errors.admin}}</div>{{/errors.admin}}
    </div>
    <div class="card p-3">
        {{#rooms}}
            <label for="rooms{{room_id}}">{{name}} ({{no}})</label>
            <input type="checkbox" id="rooms{{room_id}}" name="rooms{{room_id}}" {{#isChecked}}checked{{/isChecked}}>
        {{/rooms}}
    </div>
    {{#staff.employee_id}}<input type="hidden" name="employee_id" value="{{staff.employee_id}}">{{/staff.employee_id}}

    <button type="submit" class="btn btn-primary mt-3">Odeslat</button>
</form>